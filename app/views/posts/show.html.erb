<div>
  <% if user_signed_in? and @post.can_be_updated_or_deleted_by(current_user) %>
      <%= link_to 'Edit this post', [:edit, @post], :class => 'btn btn-info' %>
      <%= link_to 'Delete this post', [@post], method: :delete, :class => 'btn btn-danger' %>
  <% end %>
  <%= render partial: 'single_post', locals: {post: @post} %>
</div>