<ul class="list-group">
  <% comments.each do |comment| %>
      <li class="list-group-item">
        <%= link_to 'Delete', [comment], method: :delete, :class => 'btn btn-danger' if user_signed_in? and comment.can_be_updated_or_deleted_by(current_user) %>
        <b><%= comment.user.name + ' ' + comment.user.firstname %> , <%= comment.date %> :</b> <%= comment.content %>
      </li>
  <% end %>
</ul>